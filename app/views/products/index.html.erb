<table>
<th>Name</th><th>Price</th>
<% @products.each do |p|%>
<tr>
    <td><%= p.name %></td>
    <td><%= p.price %></td>
    <td><%= link_to 'Show', p %></td>
    <td><%= link_to 'Edit', edit_product_path(p) %></td>
    <td><%= link_to 'Destroy', p,
                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</table>
<%= link_to 'New Product', new_product_path %>